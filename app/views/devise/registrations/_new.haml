= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "mdl-textfield__input"
    = f.label :email, class: "mdl-textfield__label grey-text"
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.password_field :password, autocomplete: "off", class: "mdl-textfield__input"
    = f.label :password, class: "mdl-textfield__label grey-text"
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.password_field :password_confirmation, class: "mdl-textfield__input"
    = f.label :password_confirmation, class: "mdl-textfield__label grey-text"
  .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
    = f.text_field :username, autocomplete: "off", class: "mdl-textfield__input"
    = f.label :username, class: "mdl-textfield__label grey-text"
  .top-space
    = f.submit "Registrar", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
